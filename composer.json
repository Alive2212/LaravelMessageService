{
    "name": "alive2212/laravel-message-service",
    "type": "library",
    "description": "This is a laravel package for handle all message of system (SMS, PushNotif, Store to DB)",
    "keywords": [
        "Alive2212",
        "LaravelMessageService"
    ],
    "homepage": "https://github.com/Alive2212/LaravelMessageService",
    "license": "MIT",
    "authors": [
        {
            "name": "Babak Nodoust",
            "email": "alive2212@yahoo.com",
            "homepage": "https://twitter/alive2212",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Alive2212\\LaravelMessageService\\": "src",
            "Alive2212\\LaravelMessageServiceTest\\": "test"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alive2212\\LaravelMessageService\\": "src",
            "Alive2212\\LaravelMessageServiceTest\\": "test"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
